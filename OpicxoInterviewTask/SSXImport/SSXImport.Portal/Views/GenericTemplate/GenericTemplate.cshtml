@using Microsoft.AspNetCore.Hosting;
@using SSXImport.Portal.Common;
@{
    Layout = "~/Views/Shared/_Common.cshtml";
    ViewData["Title"] = "Generic Template";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title  pt-2">
                    <a class="btn btn-white" href="@Url.Action("GenericTemplateForm","GenericTemplate")"> <i class="fa fa-plus"></i> Add New Generic Template</a>
                </div>
                <div class="ibox-content">
                    <div class="" id="divAlertMessage">
                    </div>
                    <div class="form-group row">
                        <div class="col-md-4">
                            <input type="text" class="form-control" value="" placeholder="Search" id="search">
                        </div>
                        <div class="col-md-4 d-none">
                            <button class="btn btn-primary" type="button" id="btnSearch"><i class="fa fa-search"></i> Search</button>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table  table-bordered dataTables" width="100%" id="tblTemplate">
                            <thead>
                                <tr>
                                    <th width="2.5%">#</th>
                                    <th>Template Name</th>
                                    <th>Object Type</th>
                                    <th>Object</th>
                                    @*<th>Source</th>
        <th>Target</th>*@
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="ManageFilter" tabindex="-1" role="dialog" aria-labelledby="ManageFilterlbl" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ManageMappingLabel">Manage Filter</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 ">
                        <form>
                            <div class="form-group">
                                <div class="table-responsive">
                                    <input id="hdn_TemplateTableGUID" type="hidden" value="" />
                                    <table class="table  table-bordered dataTables" width="100%" id="tblFilter">
                                        <thead>
                                            <tr>
                                                <th width="2.5%">#</th>
                                                <th>Column Name</th>
                                                <th>Value Take From</th>
                                                <th>Operator</th>
                                                <th>Value</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSave" onclick="fnExecuteTemplate();">Execute</button>
                <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>

            </div>
        </div>
    </div>
</div>
@section Styles {

}

@section Scripts {
    <environment include="Development">
        <script src="~/js/GenericTemplate/GenericTemplateList.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/GenericTemplate/GenericTemplateList.min.js"></script>
    </environment>
}